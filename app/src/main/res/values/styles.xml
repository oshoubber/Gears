<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Button1" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="title1" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#1976D2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="title2" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#1976D2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">.87</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="helpTitle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.87</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="LargeBlackText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RecyclerCodeError" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="RecyclerCodeMessage" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:alpha">.87</item>
        <item name="android:gravity">fill</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:padding">1sp</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
