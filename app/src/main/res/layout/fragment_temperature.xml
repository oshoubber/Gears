<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context="me.oshoubber.gears.MainActivity"
    android:id="@+id/driving_layout"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <!--Section Air Intake-->
    <TextView
        android:id="@+id/aintakeTEXT"
        android:text="Air Intake"
        android:theme="@style/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/cardViewaIntake"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/cardViewaIntake"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewaIntake" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewaIntake"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="84dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/aintake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:theme="@style/LargeBlackText" />

    </android.support.v7.widget.CardView>

    <!--Section Ambient Air-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambient Air"
        android:theme="@style/title1"
        android:id="@+id/ambairTEXT"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/cardViewambAir"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/cardViewambAir"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewambAir" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewambAir"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="208dp">

        <TextView
            android:id="@+id/ambair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:theme="@style/LargeBlackText" />


    </android.support.v7.widget.CardView>

    <!--Section Coolant Temp-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine Coolant"
        android:theme="@style/title1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/cardViewCoolant"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/cardViewCoolant"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewCoolant"
        android:id="@+id/textView" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCoolant"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="208dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/coolanttemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:theme="@style/LargeBlackText" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

