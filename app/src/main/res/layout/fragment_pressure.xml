<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context="me.oshoubber.gears.MainActivity"
    android:id="@+id/driving_layout"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <!--Section Intake Manifold -->
    <TextView
        android:id="@+id/intakeManifoldTEXT"
        android:text="Intake Manifold"
        android:theme="@style/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/cardViewaIntakeManifold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/cardViewaIntakeManifold"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewaIntakeManifold" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewaIntakeManifold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="84dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/impressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:theme="@style/LargeBlackText" />

    </android.support.v7.widget.CardView>

    <!--Section Ambient Air-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barometric Pressure"
        android:theme="@style/title1"
        android:id="@+id/bPressureTEXT"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/cardViewBarometricPressure"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/cardViewBarometricPressure"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewBarometricPressure" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewBarometricPressure"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginTop="286dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp">

        <TextView
            android:id="@+id/bpressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:theme="@style/LargeBlackText" />


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

